<body>

  <div class="container" role="main" aria-label="Registration Form">
    <div class="company-name" aria-label="Company name">Lynora</div>

    <label for="name">Name</label>
    <input type="text" id="name" placeholder="Your full name" autocomplete="name" />

    <label for="age">Age</label>
    <input type="number" id="age" placeholder="Your age" min="1" max="120" autocomplete="off" />

    <label for="profession">Profession</label>
    <input type="text" id="profession" placeholder="Your profession" autocomplete="off" />

    <label for="mobile">Mobile Number</label>
    <input type="tel" id="mobile" placeholder="e.g. +1234567890" autocomplete="tel" />

    <label for="otp">OTP</label>
    <div class="otp-row">
      <input type="text" id="otp" placeholder="Enter OTP" autocomplete="off" />
      <button type="button" onclick="sendOTP()" aria-label="Send OTP">Send OTP</button>
    </div>

    <button class="register-btn" type="button" onclick="register()" aria-label="Register">Register</button>
  </div>

  <!-- Popup -->
  <div class="popup-overlay" id="popup" role="alertdialog" aria-modal="true" aria-labelledby="popup-message">
    <div class="popup-box">
      <div id="popup-message">Please complete all fields</div>
      <button onclick="closePopup()" aria-label="Close popup">OK</button>
    </div>
  </div>

  <script>
    function sendOTP() {
      const mobile = document.getElementById('mobile').value.trim();
      if (!mobile) {
        showPopup("Please enter your mobile number before sending OTP.");
        return;
      }
      alert(`OTP sent to ${mobile}`);
      // Real OTP integration can be added here
    }

    function register() {
      const fields = ['name', 'age', 'profession', 'mobile', 'otp'];
      for (const id of fields) {
        if (!document.getElementById(id).value.trim()) {
          showPopup("Please complete all fields");
          return;
        }
      }
      alert("Registration successful! Welcome to Lynora.");
      // Add your form submission logic here
    }

    function showPopup(message) {
      const popup = document.getElementById('popup');
      popup.querySelector('#popup-message').textContent = message;
      popup.style.display = "flex";
    }

    function closePopup() {
      const popup = document.getElementById('popup');
      popup.style.display = "none";
    }
  </script>

</body>
